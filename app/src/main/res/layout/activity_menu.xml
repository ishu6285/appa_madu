<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/colourtemp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="-205dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Notifications"
        android:textSize="20sp"
        android:textStyle="bold">

    </Button>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="5sp"
        app:cardBackgroundColor="#80FF9800">

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5sp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:text="Home"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="Cart"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold">

        </Button>

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5sp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:id="@+id/profile"
            android:text="Profile"
            android:textSize="20sp"
            android:textStyle="bold">
        </Button>

    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="309dp"
                android:layout_height="221sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="50sp"
                app:cardBackgroundColor="#80FF9800"
                app:cardCornerRadius="50sp">

                <ImageButton
                    android:layout_width="309sp"
                    android:layout_height="221dp"
                    android:id="@+id/chicken"
                    android:background="@drawable/rounded_corner"
                    android:src="@drawable/menu1">

                </ImageButton>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Chicken Burgers"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="309dp"
                android:layout_height="221sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="50sp"
                app:cardBackgroundColor="#80FF9800"
                app:cardCornerRadius="50sp">

                <ImageButton
                    android:layout_width="309sp"
                    android:layout_height="221dp"
                    android:id="@+id/vegetable"
                    android:background="@drawable/rounded_corner"
                    android:src="@drawable/menu2">

                </ImageButton>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Vegetable Burgers"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="309dp"
                android:layout_height="221sp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="50sp"
                app:cardBackgroundColor="#80FF9800"
                app:cardCornerRadius="50sp">

                <ImageButton
                    android:layout_width="309sp"
                    android:layout_height="221dp"
                    android:id="@+id/drinks"
                    android:background="@drawable/rounded_corner"
                    android:src="@drawable/menu3">

                </ImageButton>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Drinks"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>


    </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>